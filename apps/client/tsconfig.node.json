{
  "extends": "@tsconfig/node22/tsconfig.json",
  "compilerOptions": {
    "lib": ["ES2022"],
    "composite": true,
    "noEmit": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*"
  ]
}
